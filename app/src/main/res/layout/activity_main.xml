<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <Button
        android:id="@+id/box_blur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Box Blur"/>


    <Button
        android:id="@+id/gaussian_blur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gaussian Blur"/>


    <Button
        android:id="@+id/fast_stack_blur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fast Blur"/>

    <Button
        android:id="@+id/render_script_demo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RenderScript Blur"/>
    <Button
        android:id="@+id/opengl_blur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OpenGL Blur"/>

    <Button
        android:id="@+id/tex_blur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextureView Blur"/>

    <Button
        android:id="@+id/dynamic_blur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dynamic Blur"/>



</LinearLayout>
