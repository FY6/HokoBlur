<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.xiangpi.dynamicblurdemo.activity.BlurDrawableActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@mipmap/cat"
                android:scaleType="fitXY"
                android:layout_marginBottom="10dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@mipmap/cat"
                android:scaleType="fitXY"
                android:layout_marginBottom="10dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@mipmap/cat"
                android:scaleType="fitXY"
                android:layout_marginBottom="10dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@mipmap/cat"
                android:scaleType="fitXY"
                android:layout_marginBottom="10dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@mipmap/cat"
                android:scaleType="fitXY"
                android:layout_marginBottom="10dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@mipmap/cat"
                android:scaleType="fitXY"
                android:layout_marginBottom="10dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@mipmap/cat"
                android:scaleType="fitXY"
                android:layout_marginBottom="10dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@mipmap/cat"
                android:scaleType="fitXY"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop"
                android:text="0"
                android:gravity="center"
                android:textSize="30dp"
                android:background="#ff0000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop"
                android:text="1"
                android:gravity="center"
                android:textSize="30dp"
                android:background="#9479af"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop"
                android:text="2"
                android:gravity="center"
                android:textSize="30dp"
                android:background="#ccaf65"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop"
                android:text="3"
                android:gravity="center"
                android:textSize="30dp"
                android:background="#83b96a"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop"
                android:text="4"
                android:gravity="center"
                android:textSize="30dp"
                android:background="#3fc285"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop"
                android:text="5"
                android:gravity="center"
                android:textSize="30dp"
                android:background="#64a4d9"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop"
                android:text="6"
                android:gravity="center"
                android:textSize="30dp"
                android:background="#8053ae"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop"
                android:text="7"
                android:gravity="center"
                android:textSize="30dp"
                android:background="#6c6a6c"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop"
                android:text="8"
                android:gravity="center"
                android:textSize="30dp"
                android:background="#ffffff"/>

        </LinearLayout>
    </ScrollView>

    <com.hoko.blurlibrary.view.BlurFrameLayout
        android:id="@+id/blur_frameLayout"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="动画"
            android:onClick="animate"/>
    </com.hoko.blurlibrary.view.BlurFrameLayout>

    <Button
        android:id="@+id/test_view"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:onClick="remove"
        android:text="缩放"/>
</FrameLayout>
